                <PropertyName>ConnectedStandby</PropertyName>
              </TableColumnItem>
              <TableColumnItem>
                <PropertyName>FastStartup</PropertyName>
              </TableColumnItem>
              <TableColumnItem>
                <PropertyName>S0LowPowerIdle</PropertyName>
              </TableColumnItem>
              <TableColumnItem>
                <PropertyName>Hibernate</PropertyName>
              </TableColumnItem>
              <TableColumnItem>
                <PropertyName>HybridSleep</PropertyName>
              </TableColumnItem>
            </TableColumnItems>
          </TableRowEntry>
        </TableRowEntries>
